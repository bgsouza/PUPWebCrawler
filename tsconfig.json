{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "bin",
    "rootDir": "src",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",

    "src/**/*.js",
    "src/**/*.json"
  ],
  "lib": [
    "es2017",
    "dom"
  ]
}